[Unit]
Description=Gunicorn daemon for fxAcademy Django app
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/ubuntu/fxacademy
Environment="PATH=/home/ubuntu/fxacademy/venv/bin"
EnvironmentFile=/home/ubuntu/fxacademy/.env
ExecStart=/home/ubuntu/fxacademy/venv/bin/gunicorn --config gunicorn.conf.py fxAcademy.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target